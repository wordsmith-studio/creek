---
import { SITE } from '../config';
import { getCollection } from "astro:content";

const pages = (await getCollection("pages")) || [];
---

<nav>
  <div class="max-w-5xl mx-auto px-3 py-3 flex items-center justify-between h-16">
    <a href="/" class="font-bold text-xl hover:text-hot-pink">{SITE.title}</a>
    {!!pages.length && (
      <ul class="flex space-x-4">
        {pages.map((page) => (
          <li>
            <a href={'/' + page.slug}>{page.data.title}</a>
          </li>
        ))}
      </ul>
    )}

  </div>
  <div class="w-full border-b-2 border-black squiggle"></div>
</nav>
